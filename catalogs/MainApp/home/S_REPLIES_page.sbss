import ~/themes.sbss

/page: script-when-loaded=on_loaded, page-background-color=$THEME_COLOR_02
/page/loading: display=block, position=abs, gravity=center, y=-50dp, \
        font-family=$SANSSERIF_MEDIUM, text-color=$THEME_COLOR_101, text-align=center

if $SCREEN_WIDTH > "5"
    /page: font-size=1.2
else
    /page: font-size=1.1
end
