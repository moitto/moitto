import ~/themes.sbss

#cell_follow: hidden=yes, width=1pw, height=1ph, position=abs, gravity=center

/catalog: page-background-color=$THEME_COLOR_02

if $SCREEN_WIDTH > "5"
    /catalog/loading: font-size=1.2
else
    /catalog/loading: font-size=1.1
end

-- loading 분기 --

/catalog: script-when-loaded=on_loaded 
/catalog/loading: display=block, position=absolute, gravity=center, \
            font-family=$SANSSERIF_MEDIUM, text-color=$THEME_COLOR_101, text-align=center
